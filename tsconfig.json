{
  "compilerOptions": {
    "rootDirs": ["src"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "lib": ["ES2024"],
    "target": "ES2024",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    ".eslintrc.cjs",
    "prisma/seed",
  ]
}