{
  "compilerOptions": {
    "rootDirs": ["src"],
    "baseUrl": ".",
    "paths": {
      // core
      "@factories/*": ["./src/core/factories/*"],
      "@use-cases/*": ["./src/core/use-cases/*"],
      // http
      "@controllers/*": ["./src/http/controllers/*"],
      "@dto/*": ["./src/http/dto/*"],
      "@jwt/*": ["./src/http/jwt/*"],
      "@middlewares/*": ["./src/http/middlewares/*"],
      "@routes/*": ["./src/http/routes/*"],
      // infrastructure
      "@database/*": ["./src/infrastructure/database/*"],
      "@repositories/*": ["./src/infrastructure/repositories/*"],
      "@services/*": ["./src/infrastructure/services/*"],
      // shared
      "@errors/*": ["src/shared/errors/*"],
      "@app-types/*": ["src/shared/app-types/*"],
      // src
      "@/*": ["./src/*"],
    },
    "outDir": "dist",
    "lib": ["ES2024"],
    "target": "ES2024",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "prisma/seed.ts",
  ]
}